

<div class="d-flex p-2">
  <%= simple_form_for(@restaurant) do |f| %>

    <%= f.error_notification message: "Something isn't right" %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category %>
    </div>
    <div class="form-actions btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
